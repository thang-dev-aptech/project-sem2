<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gympro.controller.PaymentController"
      stylesheets="@../css/Payment.css" styleClass="root"> <VBox styleClass="header">
    <Label text="Payment Processing" styleClass="title" />
    <Label text="Process member payments and generate invoices" styleClass="subtitle" />
</VBox>

    <HBox spacing="30" VBox.vgrow="ALWAYS">

        <VBox styleClass="card" HBox.hgrow="ALWAYS" prefWidth="600">
            <Label text="Payment Details" styleClass="card-title" />

            <Label text="Select Invoice" styleClass="form-label" />
            <ComboBox fx:id="invoiceComboBox" maxWidth="Infinity" />

            <GridPane hgap="20" vgap="10" style="-fx-padding-top: 20px;">
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Member Name" styleClass="form-label" />
                    <TextField fx:id="memberNameField" editable="false" styleClass="read-only-field" />
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Email" styleClass="form-label" />
                    <TextField fx:id="emailField" editable="false" styleClass="read-only-field" />
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Package" styleClass="form-label" />
                    <TextField fx:id="packageField" editable="false" styleClass="read-only-field" />
                </VBox>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Amount" styleClass="form-label" />
                    <TextField fx:id="amountField" editable="false" styleClass="read-only-field" />
                </VBox>
            </GridPane>

            <VBox spacing="10" style="-fx-padding-top: 20px;">
                <Label text="Payment Method" styleClass="form-label" />
                <HBox spacing="20">
                    <fx:define>
                        <ToggleGroup fx:id="paymentMethodGroup" />
                    </fx:define>
                    <RadioButton text="Cash" toggleGroup="$paymentMethodGroup" selected="true" />
                    <RadioButton text="Credit Card" toggleGroup="$paymentMethodGroup" />
                    <RadioButton text="Bank Transfer" toggleGroup="$paymentMethodGroup" />
                </HBox>
            </VBox>

            <Button text="Process Payment" fx:id="processPaymentButton" styleClass="button-process" style="-fx-margin-top: 20px;" />
        </VBox>

        <VBox styleClass="card" prefWidth="400">
            <Label text="Invoice Preview" styleClass="card-title" />

            <VBox fx:id="invoicePlaceholder" styleClass="invoice-placeholder" VBox.vgrow="ALWAYS">
                <Label text="Select an invoice to view details" />
            </VBox>

            <VBox fx:id="invoicePreviewContainer" spacing="15" styleClass="invoice-preview-details" managed="false" visible="false">
                <VBox>
                    <Label text="Invoice #" styleClass="invoice-label-header"/>
                    <Label fx:id="invoiceNumberLabel" styleClass="invoice-label-data"/>
                </VBox>
                <VBox>
                    <Label text="Member" styleClass="invoice-label-header"/>
                    <Label fx:id="invoiceMemberLabel" styleClass="invoice-label-data"/>
                </VBox>
                <VBox>
                    <Label text="Email" styleClass="invoice-label-header"/>
                    <Label fx:id="invoiceEmailLabel" styleClass="invoice-label-data"/>
                </VBox>
                <VBox>
                    <Label text="Package" styleClass="invoice-label-header"/>
                    <Label fx:id="invoicePackageLabel" styleClass="invoice-label-data"/>
                </VBox>
                <VBox>
                    <Label text="Amount" styleClass="invoice-label-header"/>
                    <Label fx:id="invoiceAmountLabel" styleClass="invoice-label-amount"/>
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>