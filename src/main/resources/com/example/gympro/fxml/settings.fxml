<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.gympro.controller.SettingsController" 
            stylesheets="@../css/styles.css" 
            fitToWidth="true" 
            styleClass="dashboard-scroll">
    <VBox spacing="20" styleClass="dashboard-container">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- Header -->
        <VBox spacing="5">
            <Label text="âš™ï¸ System Settings" styleClass="page-title"/>
            <Label text="Manage system configuration and settings" styleClass="page-subtitle"/>
        </VBox>

        <!-- TabPane for different settings -->
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            
            <!-- Tab 1: Gym Information -->
            <Tab text="ðŸ‹ï¸ Gym Information" closable="false">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="Basic gym information" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
                        </columnConstraints>
                        
                        <Label text="Gym Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtGymName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtGymAddress" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtGymPhone" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnSaveBranch" text="ðŸ’¾ Save" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab 2: Business Configuration -->
            <Tab text="ðŸ“‹ Business Configuration" closable="false">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="Business rules configuration" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="200" prefWidth="250"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        </columnConstraints>
                        
                        <Label text="Member Code Prefix:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtMemberCodePrefix" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Invoice Prefix:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtInvoicePrefix" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnSaveBusiness" text="ðŸ’¾ Save" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab 3: Security -->
            <Tab text="ðŸ”’ Security" closable="false">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="System security configuration" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="200" prefWidth="250"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        </columnConstraints>
                        
                        <Label text="Minimum Password Length:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtPasswordMinLength" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="(6-20 characters)" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                               style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                    </GridPane>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnSaveSecurity" text="ðŸ’¾ Save" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </Tab>

            <!-- Tab 4: System -->
            <Tab text="â„¹ï¸ System" closable="false">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <Label text="System Information" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="200" prefWidth="250"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                        </columnConstraints>
                        
                        <Label text="Application Version:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="lblAppVersion" text="1.0.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="Database Version:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lblDbVersion" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Database Information:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="lblDbInfo" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                </VBox>
            </Tab>

        </TabPane>

    </VBox>
</ScrollPane>
