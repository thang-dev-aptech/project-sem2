<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gympro.controller.MainController" stylesheets="@../css/styles.css">
    <!-- Left Sidebar -->
    <left>
        <VBox styleClass="sidebar" prefWidth="250">
            <!-- Logo Section -->
            <VBox styleClass="sidebar-header" spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <StackPane styleClass="logo-icon" prefWidth="40" prefHeight="40">
                        <Label text="ðŸ’ª" style="-fx-font-size: 24;"/>
                    </StackPane>
                    <VBox spacing="2">
                        <Label text="GymPro" styleClass="logo-title"/>
                        <Label text="Admin Dashboard" styleClass="logo-subtitle"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Navigation Menu -->
            <VBox fx:id="navMenu" styleClass="nav-menu" spacing="5" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="15" left="10" right="10" bottom="10"/>
                </padding>
            </VBox>

            <!-- Logout Button -->
            <VBox styleClass="sidebar-footer" spacing="10">
                <Button fx:id="logoutBtn" text="ðŸšª Logout" styleClass="logout-btn" onAction="#handleLogout"/>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>
</BorderPane>
