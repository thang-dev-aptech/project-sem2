<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.Pane?>
<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gympro.controller.DashboardController" stylesheets="@../css/styles.css" fitToWidth="true" styleClass="dashboard-scroll">
    <VBox spacing="20" styleClass="dashboard-container">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- Header -->
        <VBox spacing="5">
            <Label text="GymPro Admin Dashboard" styleClass="page-title"/>
            <Label text="Welcome back! Here's your gym overview." styleClass="page-subtitle"/>
        </VBox>

        <!-- Stats Cards Grid -->
        <GridPane fx:id="statsGrid" hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
            </columnConstraints>
        </GridPane>
      

        <!-- Charts Section -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="66" minWidth="300"/>
                <ColumnConstraints percentWidth="34" minWidth="250"/>
            </columnConstraints>
            
          
            <VBox styleClass="card" spacing="10" GridPane.columnIndex="0">
                 <BarChart fx:id="revenueBarChart" prefWidth="600" prefHeight="400">
            <xAxis>
                <CategoryAxis fx:id="xAxis" label="Ngày"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Doanh thu (VNĐ)"/>
            </yAxis>
        </BarChart>
            </VBox> 

            <!-- Member Status Chart -->
            <VBox styleClass="card" spacing="10" GridPane.columnIndex="1">
                        <PieChart fx:id="memberPieChart" prefWidth="400" prefHeight="400" title="Trạng thái hội viên"/>

            </VBox>
        </GridPane>

        <!-- Urgent Reminders -->
            <VBox fx:id="urgentRemindersBox" spacing="15" styleClass="urgent-reminders-box">
            <Label text="Urgent Reminders - Expiring Within 3 Days" styleClass="card-title"/>
        </VBox>

        <!-- Members Table -->
        <VBox styleClass="card" spacing="10">
            <Label text="All Members Expiring Soon" styleClass="card-title"/>
           <TableView fx:id="tblExpiry" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colCode" text="Member_ID" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="FullName" prefWidth="180"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="100"/>
                    <TableColumn fx:id="colPackage" text="Package" prefWidth="120"/>
                    <TableColumn fx:id="colEndDate" text="Expiring Date" prefWidth="120"/>
                    <TableColumn fx:id="colExpiry" text="DaysLeft" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Action" prefWidth="400"/>
                </columns>
        </TableView>
        </VBox>
      

    </VBox>
</ScrollPane>
