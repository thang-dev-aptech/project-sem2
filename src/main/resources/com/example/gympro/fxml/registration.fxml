<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="1000.0" spacing="15.0" styleClass="root"
      stylesheets="@../css/Registration.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.gympro.controller.RegistrationController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
    <Label styleClass="main-title" text="Registration &amp; Renewal"/>
    <Label styleClass="subtitle" text="Register new members or renew existing memberships"/>
    <HBox spacing="30.0" VBox.vgrow="ALWAYS">
        <VBox prefWidth="600.0" spacing="15.0" styleClass="card" HBox.hgrow="ALWAYS">
            <Label styleClass="card-title" text="New Registration"/>
            <Label text="Select Member"/>
            <ComboBox fx:id="memberComboBox" maxWidth="Infinity" promptText="Choose a member..."/>
            <Label text="Select Package"/>
            <ComboBox fx:id="packageComboBox" maxWidth="Infinity" promptText="Choose a package..."/>
            <HBox spacing="20.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="Start Date"/>
                    <DatePicker fx:id="startDatePicker" maxWidth="Infinity"/>
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label text="End Date"/>
                    <TextField fx:id="endDateField" editable="false" promptText="mm/dd/yyyy"/>
                </VBox>
            </HBox>
            <Button fx:id="createButton" maxWidth="Infinity" onAction="#handleCreateRegistration"
                    styleClass="create-button" text="Create Registration"/>
        </VBox>

        <VBox minWidth="300.0" prefWidth="350.0" spacing="20.0" styleClass="summary-card">
            <Label styleClass="card-title" text="Summary"/>
            <GridPane hgap="10.0" vgap="12.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0"/>
                    <RowConstraints minHeight="10.0"/>
                </rowConstraints>
                <Label styleClass="summary-label" text="Selected Member"/>
                <Label fx:id="summaryMemberLabel" styleClass="summary-value" text="None"
                       GridPane.columnIndex="1"/>

                <Label styleClass="summary-label" text="Selected Package" GridPane.rowIndex="1"/>
                <Label fx:id="summaryPackageLabel" styleClass="summary-value" text="None"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label styleClass="summary-label" text="Duration" GridPane.rowIndex="2"/>
                <Label fx:id="summaryDurationLabel" styleClass="summary-value" text="N/A"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label styleClass="summary-label" text="Start Date" GridPane.rowIndex="3"/>
                <Label fx:id="summaryStartDateLabel" styleClass="summary-value" text="N/A"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label styleClass="summary-label" text="End Date" GridPane.rowIndex="4"/>
                <Label fx:id="summaryEndDateLabel" styleClass="summary-value" text="N/A"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label styleClass="summary-label" text="Total Amount" GridPane.rowIndex="5"/>
                <Label fx:id="summaryAmountLabel" styleClass="summary-value" text="â‚« 0"
                       GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>
        </VBox>
    </HBox>
</VBox>