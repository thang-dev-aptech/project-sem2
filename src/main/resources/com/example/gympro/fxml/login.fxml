<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gympro.controller.LoginController" stylesheets="@../css/styles.css" styleClass="login-root">
    <center>
        <VBox alignment="CENTER" styleClass="login-container">
            <VBox alignment="CENTER" spacing="20" styleClass="login-card">
                <!-- Logo -->
                <StackPane styleClass="login-logo">
                    <Label text="ðŸ’ª" style="-fx-font-size: 48;"/>
                </StackPane>

                <!-- Title -->
                <Label text="GymPro" styleClass="login-title"/>
                <Label text="Gym Management System" styleClass="login-subtitle"/>

                <!-- Form -->
                <VBox spacing="15">
                    <!-- Username -->
                    <VBox spacing="5">
                        <Label text="Username" styleClass="form-label"/>
                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="form-input"/>
                    </VBox>

                    <!-- Password -->
                    <VBox spacing="5">
                        <Label text="Password" styleClass="form-label"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-input"/>
                    </VBox>

                    <!-- Login Button -->
                    <Button fx:id="loginBtn" text="Login" styleClass="login-button" onAction="#handleLogin"/>
                </VBox>

                <!-- Footer -->
                <Label text="Powered by GymPro Desktop" styleClass="login-footer"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
