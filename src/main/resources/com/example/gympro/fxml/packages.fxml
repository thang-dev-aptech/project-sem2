<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gympro.controller.PackagesController" stylesheets="@../css/styles.css" fitToWidth="true" styleClass="dashboard-scroll">
    <VBox spacing="20" styleClass="dashboard-container">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- Header -->
        <VBox spacing="5">
            <Label text="Packages Management" styleClass="page-title"/>
            <Label text="Create and manage gym membership packages." styleClass="page-subtitle"/>
        </VBox>

        <!-- Add Package Button -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="+ Add New Package" styleClass="primary-button"/>
        </HBox>

        <!-- Packages Grid -->
        <GridPane fx:id="packagesGrid" hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="33" minWidth="250"/>
                <ColumnConstraints percentWidth="33" minWidth="250"/>
                <ColumnConstraints percentWidth="33" minWidth="250"/>
            </columnConstraints>
        </GridPane>
    </VBox>
</ScrollPane>
