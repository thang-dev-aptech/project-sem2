<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<!--
  MEMBER MANAGEMENT INTERFACE
  Designed with 2-row model (Vertical SplitPane)
-->

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gympro.controller.MembersController"
            stylesheets="@../css/styles.css" fitToWidth="true" styleClass="dashboard-scroll">

    <VBox spacing="20" styleClass="dashboard-container">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- HEADER -->
        <VBox spacing="5">
            <Label text="Member Management" styleClass="page-title"/>
            <Label text="Create and manage member information." styleClass="page-subtitle"/>
        </VBox>

        <!-- TOOLBAR -->
        <ToolBar styleClass="tool-bar">
            <items>
                <TextField promptText="ðŸ” Search (Code, Name, Phone, Email)..." fx:id="searchField" prefWidth="250"/>
                <ComboBox fx:id="statusFilter" promptText="ðŸ“Š Status" prefWidth="120"/>
                <Separator orientation="VERTICAL"/>
                <Button text="âž• Add Member" styleClass="icon-button, success" onAction="#handleNewMember"/>
                <Button text="ðŸ”„ Refresh" styleClass="icon-button" onAction="#loadMembers"/>
                <Button fx:id="exportButton" text="ðŸ“¤ Export Excel" styleClass="icon-button" onAction="#handleExportExcel"/>
            </items>
        </ToolBar>

        <!-- SPLIT PANE (VERTICAL) -->
        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.55" orientation="VERTICAL" styleClass="main-split-pane">

            <!-- ROW 1: TABLE VIEW (Member List) -->
            <VBox styleClass="card" spacing="10" minHeight="300">
                <padding>
                    <Insets top="20" right="20" bottom="10" left="20"/>
                </padding>
                <Label text="Member List" styleClass="card-title"/>
                <TableView fx:id="membersTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Member Code" prefWidth="100" fx:id="colMemberCode"/>
                        <TableColumn text="Full Name" prefWidth="150" fx:id="colFullName"/>
                        <TableColumn text="Phone" prefWidth="120" fx:id="colPhone"/>
                        <TableColumn text="Email" prefWidth="180" fx:id="colEmail"/>
                        <TableColumn text="Status" prefWidth="100" fx:id="colStatus"/>
                        <TableColumn text="Gender" prefWidth="80" fx:id="colGender"/>
                        <TableColumn text="Date of Birth" prefWidth="100" fx:id="colDOB"/>
                        <TableColumn text="Created At" prefWidth="150" fx:id="colCreatedAt"/>
                        <TableColumn text="Updated At" prefWidth="150" fx:id="colUpdatedAt"/>
                        <TableColumn text=" " prefWidth="78" fx:id="colActions"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- ROW 2: DETAIL FORM (VBox Layout) -->
            <VBox fx:id="detailPane" spacing="15" styleClass="card, detail-form-container" minHeight="350">
                <padding>
                    <Insets top="20" right="20" bottom="10" left="20"/>
                </padding>

                <Label fx:id="formTitle" text="Member Details" styleClass="card-title"/>
                <Separator styleClass="form-separator"/>

                <!-- FORM INPUTS (GridPane) -->
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="250"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="250"/>
                    </columnConstraints>

                    <Label text="Member Code:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="codeField" promptText="MEM-001" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="statusComboBox" prefWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="fullNameField" promptText="John Doe" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Gender:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="genderComboBox" prefWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="phoneField" promptText="090xxxxxxx" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Date of Birth:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <DatePicker fx:id="dobPicker" prefWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="emailField" promptText="example@mail.com" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="addressArea" wrapText="true" prefHeight="60"
                              GridPane.columnIndex="1" GridPane.rowIndex="4"
                              GridPane.columnSpan="3"/>

                    <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <TextArea fx:id="noteArea" wrapText="true" prefHeight="60"
                              GridPane.columnIndex="1" GridPane.rowIndex="5"
                              GridPane.columnSpan="3"/>
                </GridPane>

                <!-- BUTTONS GROUP -->
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="button-group">
                    <VBox.margin>
                        <Insets top="-5"/>
                    </VBox.margin>

                    <Button fx:id="deleteButton" text="Delete" styleClass="delete-button" onAction="#handleDelete"/>
                    <Button text="Cancel" styleClass="secondary-button" onAction="#handleCancel"/>
                    <Button fx:id="saveButton" text="ðŸ’¾ Save" styleClass="primary-button" onAction="#handleSave"/>
                </HBox>
            </VBox>
        </SplitPane>
    </VBox>
</ScrollPane>