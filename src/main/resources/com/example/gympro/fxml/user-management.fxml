<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gympro.controller.UserManagementController"
            stylesheets="@../css/styles.css" fitToWidth="true" styleClass="dashboard-scroll">

    <VBox spacing="20" styleClass="dashboard-container">
        <padding>
            <Insets top="30" left="30" right="30" bottom="30"/>
        </padding>

        <!-- HEADER -->
        <VBox spacing="5">
            <Label text="User Management" styleClass="page-title"/>
            <Label text="Create and manage user accounts and permissions." styleClass="page-subtitle"/>
        </VBox>

        <!-- TOOLBAR -->
        <ToolBar styleClass="tool-bar">
            <items>
                <TextField promptText="ðŸ” Search (Username, Name, Email)..." fx:id="searchField" prefWidth="250"/>
                <ComboBox fx:id="statusFilter" promptText="ðŸ“Š Status" prefWidth="120"/>
                <Separator orientation="VERTICAL"/>
                <Button text="âž• Add User" styleClass="icon-button, success" onAction="#handleNewUser"/>
                <Button text="ðŸ”„ Refresh" styleClass="icon-button" onAction="#loadUsers"/>
            </items>
        </ToolBar>

        <!-- SPLIT PANE -->
        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.55" orientation="VERTICAL" styleClass="main-split-pane">

            <!-- ROW 1: TABLE VIEW -->
            <VBox styleClass="card" spacing="10" minHeight="300">
                <padding>
                    <Insets top="20" right="20" bottom="10" left="20"/>
                </padding>
                <Label text="User List" styleClass="card-title"/>
                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Username" prefWidth="120" fx:id="colUsername"/>
                        <TableColumn text="Full Name" prefWidth="150" fx:id="colFullName"/>
                        <TableColumn text="Email" prefWidth="180" fx:id="colEmail"/>
                        <TableColumn text="Phone" prefWidth="120" fx:id="colPhone"/>
                        <TableColumn text="Roles" prefWidth="150" fx:id="colRoles"/>
                        <TableColumn text="Status" prefWidth="100" fx:id="colStatus"/>
                        <TableColumn text="Last Login" prefWidth="150" fx:id="colLastLogin"/>
                        <TableColumn text=" " prefWidth="78" fx:id="colActions"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- ROW 2: DETAIL FORM -->
            <VBox fx:id="detailPane" spacing="15" styleClass="card, detail-form-container" minHeight="350">
                <padding>
                    <Insets top="20" right="20" bottom="10" left="20"/>
                </padding>

                <Label fx:id="formTitle" text="User Details" styleClass="card-title"/>
                <Separator styleClass="form-separator"/>

                <!-- FORM INPUTS -->
                <GridPane hgap="20" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="250"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="250"/>
                    </columnConstraints>

                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="usernameField" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="statusComboBox" prefWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="fullNameField" promptText="John Doe" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Password:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="passwordField" promptText="(Leave blank if not changing)" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="emailField" promptText="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="phoneField" promptText="090xxxxxxx" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Roles:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="4"/>
                    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="4">
                        <CheckBox text="OWNER - Gym Owner (Full Access)" fx:id="roleOwnerCheckBox"/>
                        <CheckBox text="STAFF - Front Desk Staff (Limited Access)" fx:id="roleStaffCheckBox"/>
                    </VBox>
                </GridPane>

                <!-- BUTTONS -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="ðŸ’¾ Save" fx:id="saveButton" styleClass="icon-button, success" onAction="#handleSave"/>
                    <Button text="ðŸ—‘ï¸ Delete" fx:id="deleteButton" styleClass="icon-button, danger" onAction="#handleDelete"/>
                    <Button text="âŒ Cancel" styleClass="icon-button" onAction="#handleCancel"/>
                </HBox>
            </VBox>
        </SplitPane>
    </VBox>
</ScrollPane>
